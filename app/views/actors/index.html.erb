
<style>
	table,tr,th,td{border: 1px solid}
</style>

<h1 style="text-align: center;">Actores</h1>
<div class="text-right">
<%=  link_to "Crear Actor",new_actor_path, class: "btn btn-primary" %>

<!--<a class="btn btn-primary btn-lg" href="http://localhost:3000/actors/new" role="button">Crear Actor</a>-->
</div><br>

<table>
	<tr>
		<th>Foto</th>
		<th>Nombre</th>
		<th>Bio</th>
		<th>Fecha de Nacimiento</th>
		<th>Lugar de Nacimiento</th>
		<th>Fecha de Fallecimiento</th>
		<th>Lugar de Fallecimiento</th>
	</tr>
	
	<% @actors.each do |t| %>   <!--Aquí tomo la información que hay en la base de datos la evaluo para mostrar lo que quiero-->
		<%if t.alive == false %>
		<tr>
			<td> <img src="<%= t.image_url%>" alt=""> </td>
			<td><%= t.name%></td>
			<td><%= t.bio%></td>
			<td><%= t.birth_date%></td>
			<td><%= t.birth_place%></td>
			<td><%= t.death_date%></td>
			<td><%= t.death_place%></td>
		</tr>
		<% else %>
		<tr>
			<td><img src="<%= t.image_url%>" alt=""> </td>
			<td><%= t.name%></td>
			<td><%= t.bio%></td>
			<td><%= t.birth_date%></td>
			<td><%= t.birth_place%></td>
		</tr>
		<% end %>

	<% end %>		
</table>
